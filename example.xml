    <copyright>Copyright (C) 2017 Matt Thomas. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>matt@betweenbrain.com</authorEmail>
    <authorUrl>http://betweenbrain.com</authorUrl>
    <version>0.0.1</version>
    <description>PLG_FIELDS_EXAMPLE_DESCRIPTION</description>
    <files>
        <filename plugin="example">example.php</filename>
        <folder>params</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_fields_example.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_fields_example.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="show"
                        type="radio"
                        label="PLG_FIELDS_EXAMPLE_PARAMS_SHOW_LABEL"
                        description="PLG_FIELDS_EXAMPLE_PARAMS_SHOW_LABEL_DESC"
                        class="btn-group btn-group-yesno"
                        default="0"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>